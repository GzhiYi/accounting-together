page {
  background-color: #F2F2F2;
  width: 100%;
  padding: 100rpx 0 40rpx;
}
.mp-info {
  display:flex;
  flex-direction:column;
  text-align:center;
  justify-content: center;
  align-items: center;
}
.mp-info .icon {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin: 20rpx;
  margin-top:-88rpx;
}
.sum {
  color:#555;
  font-size:26rpx;
}
.one-avatar {
  width: 80rpx;
  height: 100rpx;
  position: relative;
  margin: 10rpx 15rpx;
}
.check-list {
  display:flex;
  flex-wrap:wrap;
  justify-content:space-between;
  align-items: center;
  padding: 21rpx;
  width:246rpx;
  margin-bottom:20rpx;

  background-color: #fff;
  border-radius:38rpx;
  box-shadow: 0px 7px 20px 4px #ececec;
  transition: .5s all;
}
.user-avatar-list {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-name {
  font-size:23rpx;
  width: 80rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align:center;
}

.bill-result {
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  padding: 40rpx;
}

.result-word {
  font-size: 33rpx;
}
.up {
  color: #28a745;
  margin-right:7rpx
}
.down {
  color: #dc3545;
  margin-right:7rpx
}

.setting {
  width: 90%;
  margin: 0 auto;
  padding: 20rpx;
}
.result-tips {
  font-size:23rpx;
  text-align:center;
  width:100%;
  margin:10rpx 0 0;
  color:#555;
}